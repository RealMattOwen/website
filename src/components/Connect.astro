---
import Container from "../components/Container.astro";
import Button from "../components/Button.astro";
---

<section class="connect">
  <Container>
    <div class="connect__content">
      <h2 class="connect__title">Let's connect</h2>
      <p class="connect__message">
        Your contribution matters. Submit your talk, contribute to the website
        an stay tuned for the upcoming events.
      </p>
      <div class="connect__buttons">
        <Button href="https://github.com/nn1-dev" text="GitHub" icon="github" />
        <Button
          href="http://linkedin.com/company/nn1-dev"
          text="LinkedIn"
          icon="linkedin"
        />
      </div>
      <!-- Pictures with all contributors logo to go here -->
    </div>
  </Container>
</section>

<style>
  .connect {
    padding-block: calc(var(--lh) * 2);
    box-shadow: inset 0 -1px 0 0 var(--color-border);
    background-color: var(--color-bg-contrast);

    @media (800px <= width) {
      padding-block: calc(var(--lh) * 4);
    }
  }

  .connect__content {
    display: flex;
    flex-direction: column;
    gap: var(--lh);
    align-items: center;
  }

  .connect__title {
    font-weight: 800;
    font-size: calc(var(--fz) * 1.5);

    @media (800px <= width) {
      font-size: 32px;
      line-height: calc(var(--lh) * 1.5);
    }
  }

  .connect__message {
    max-width: 50ch;
    text-align: center;
  }

  .connect__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--lh) / 2);
    align-items: center;
    justify-content: center;
  }
</style>
